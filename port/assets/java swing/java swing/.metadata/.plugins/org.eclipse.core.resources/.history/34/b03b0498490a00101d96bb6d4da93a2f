package swingpack;
import javax.swing.*;
import java.awt.event.*;
public class s22 extends JFrame implements MouseListener {
    private JLabel label = new JLabel("Perform Mouse Actions...");
    public s22() {
        setTitle("Mouse Event Example");
        setSize(400, 200);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setLayout(null);
        label.setBounds(100, 80, 250, 30);
        add(label);
        addMouseListener(this);
        setVisible(true);
    }
    public void mouseClicked(MouseEvent e) { 
    	label.setText("Mouse Clicked at: (" + e.getX() + ", " + e.getY() + ")");
    	}
    public void mousePressed(MouseEvent e) {
    	label.setText("Mouse Pressed at: (" + e.getX() + ", " + e.getY() + ")");
    	}
    public void mouseReleased(MouseEvent e) {
    	label.setText("Mouse Released at: (" + e.getX() + ", " + e.getY() + ")"); 
    	}
    public void mouseEntered(MouseEvent e) { 
    	label.setText("Mouse Entered the Frame");
    	}
    public void mouseExited(MouseEvent e) { 
    	label.setText("Mouse Exited the Frame");
    	}
    public static void main(String[] args) {
        new s22();
    }
}