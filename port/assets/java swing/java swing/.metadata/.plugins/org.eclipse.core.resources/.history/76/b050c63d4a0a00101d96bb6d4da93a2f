package swingpack;
import javax.swing.*;
import java.awt.*;
import java.awt.event.*;
public class s22{
    public static void main(String[] args) {
        JFrame frame = new JFrame("Swing Components Example");
        frame.setSize(400, 300);
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setLayout(new FlowLayout());
        JLabel label = new JLabel("Choose an option:");
        JTextField textField = new JTextField(15);
        JButton btnHello = new JButton("Say Hello");
        JButton btnClear = new JButton("Clear");
        btnHello.addActionListener(e -> textField.setText("Hello, Swing!"));
        btnClear.addActionListener(e -> textField.setText(""));
        JCheckBox checkBox = new JCheckBox("Check me!");
        JRadioButton radio1 = new JRadioButton("Option 1");
        JRadioButton radio2 = new JRadioButton("Option 2");
        ButtonGroup group = new ButtonGroup();
        group.add(radio1);
        group.add(radio2);
        String[] choices = {"Red", "Blue", "Green"};
        JComboBox<String> comboBox = new JComboBox<>(choices);
        frame.add(label);
        frame.add(textField);
        frame.add(btnHello);
        frame.add(btnClear);
        frame.add(checkBox);
        frame.add(radio1);
        frame.add(radio2);
        frame.add(comboBox);
        frame.setVisible(true);
    }
}
